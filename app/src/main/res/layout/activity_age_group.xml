<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/lvPosts"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:layout_marginHorizontal="30pt"
    android:layout_marginVertical="50pt">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/lessThan10"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Less than 10: " />

        <TextView
            android:id="@+id/lessThan10Value"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/TenTo19"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/lessThan10"
            android:text="10 - 19: " />

        <TextView
            android:id="@+id/TenTo19Value"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/TwentyTo29"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="20 - 29: " />

        <TextView
            android:id="@+id/TwentyTo29Value"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/ThirtyTo39"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/TwentyTo29"
            android:text="30 - 39:" />

        <TextView
            android:id="@+id/ThirtyTo39Value"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/FortyTo49"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/ThirtyTo39"
            android:text="40 - 49: " />

        <TextView
            android:id="@+id/FortyTo49Value"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/FiftyTo59"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/FortyTo49"
            android:text="50 - 59: " />

        <TextView
            android:id="@+id/FiftyTo59Value"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/SixtyTo69"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/FiftyTo59"
            android:text="60 - 69: " />

        <TextView
            android:id="@+id/SixtyTo69Value"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/SeventyTo79"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/SixtyTo69"
            android:text="70 - 79: " />

        <TextView
            android:id="@+id/SeventyTo79Value"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/EightyTo89"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/SeventyTo79"
            android:text="80 - 89: " />

        <TextView
            android:id="@+id/EightyTo89Value"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/NinetyPlus"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="90+: " />

        <TextView
            android:id="@+id/NinetyPlusValue"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />
    </LinearLayout>

    <ProgressBar
        android:id="@+id/progressBar2"
        style="?android:attr/progressBarStyle"
        android:layout_width="163dp"
        android:layout_height="110dp"
        android:layout_marginHorizontal="20pt"/>

</LinearLayout>